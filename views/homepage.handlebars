<!-- Loop over each object in the projects array -->

<div class="grid grid-flow-row grid-cols-12 mt-12 mx-auto">

  <div class="bg-primary rounded p-4 col-start-5 col-end-9 flex-col flex content-center items-center" id='petContainer'>
    <!-- Slideshow container -->
    <div class='grid grid-flow-col grid-cols-6 gap-x-4 mx-auto' id="slideshow-container">
      <div class='col-span-1'>
        <button class='bg-accent_light hover:bg-accent_dark shadow p-2 rounded text-2xl'>
          <a href="/" id="dislike" aria-label='pile of poop'>&#128169;</a>
        </button>
      </div>
      <div id='petCard' class='bg-primary mx-auto col-span-4'>
        {{!-- pet image or placeholder here --}}

        <input type="hidden" id="user-id" value="{{ userData.id }}">
        <img id="image" src={{randomPet.primary_photo_cropped.small}}>
        <h2 id="pet_name" class='text-3x font-bold'>{{randomPet.name}}</h2>
        <ul>
          <li id="pet_status">{{randomPet.status}}</li>
          <li id="pet_email">{{randomPet.contact.email}}</li>
          <li id="pet_phone">{{randomPet.contact.phone}}</li>
          <li id="pet_breed">{{randomPet.breed}}</li>
          <li id="pet_age">{{randomPet.age}}</li>
          <li id="pet_gender">{{randomPet.gender}}</li>
        </ul>
        <p id="pet_description">{{randomPet.description}}</p>

      </div>
      <div class='col-span-1'>
        <button class='bg-accent_light hover:bg-accent_dark shadow p-2 rounded text-2xl'>
          <a id="like" aria-label='sparkling heart'>&#128150;</a>
        </button>
      </div>
    </div>
  </div>

  <script src="./js/homepage.js"></script>